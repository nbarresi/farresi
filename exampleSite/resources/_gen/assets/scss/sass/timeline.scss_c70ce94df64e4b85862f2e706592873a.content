* {
  box-sizing: border-box; }

html {
  font-size: 14px; }

body {
  background: #f6f9fc;
  font-family: "Open Sans", sans-serif;
  color: #525f7f; }

h2 {
  margin: 5%;
  text-align: center;
  font-size: 2rem;
  font-weight: 100; }

.timeline {
  display: flex;
  flex-direction: column;
  margin: 20px auto;
  position: relative; }
  .timeline__event {
    margin-bottom: 20px;
    position: relative;
    display: flex;
    margin: 20px 0;
    border-radius: 6px;
    align-self: center;
    width: 48vw; }
    .timeline__event:nth-child(2n + 1) {
      flex-direction: row-reverse; }
      .timeline__event:nth-child(2n + 1) .timeline__event__date {
        border-radius: 0 6px 6px 0; }
      .timeline__event:nth-child(2n + 1) .timeline__event__content {
        border-radius: 6px 0 0 6px; }

@keyframes crescendo {
  0% {
    transform: translateY(0%) scaleY(1); }
  100% {
    transform: translateY(200%) scaleY(3.8); } }
      .timeline__event:nth-child(2n + 1) .timeline__event__icon:before {
        content: "";
        width: 2px;
        height: 100%;
        background: #49344d;
        position: absolute;
        top: 0%;
        left: 50%;
        right: auto;
        z-index: -1;
        transform: translateX(-50%);
        animation: crescendo 2s forwards 1s ease-in-out; }
      .timeline__event:nth-child(2n + 1) .timeline__event__icon:after {
        content: "";
        width: 100%;
        height: 2px;
        background: #49344d;
        position: absolute;
        right: 0;
        z-index: -1;
        top: 50%;
        left: auto;
        transform: translateY(-50%);
        animation: fillLeft 2s forwards 1s ease-in-out; }
    .timeline__event__title {
      font-size: 1.2rem;
      line-height: 1.4;
      text-transform: uppercase;
      font-weight: 600;
      color: #93689a;
      letter-spacing: 1.5px; }
    .timeline__event__content {
      padding: 20px;
      box-shadow: 0 30px 60px -12px rgba(50, 50, 93, 0.25), 0 18px 36px -18px rgba(0, 0, 0, 0.3), 0 -12px 36px -8px rgba(0, 0, 0, 0.025);
      background: #fff;
      width: calc(40vw - 84px);
      border-radius: 0 6px 6px 0; }
    .timeline__event__date {
      color: #f6f9fc;
      font-size: 1.5rem;
      font-weight: 600;
      background: #93689a;
      display: flex;
      align-items: center;
      justify-content: center;
      white-space: nowrap;
      padding: 0 20px;
      border-radius: 6px 0 0 6px; }
    .timeline__event__icon {
      display: flex;
      align-items: center;
      justify-content: center;
      color: #f6f9fc;
      padding: 20px;
      align-self: center;
      margin: 0 20px;
      background: #49344d;
      border-radius: 100%;
      width: 40px;
      box-shadow: 0 30px 60px -12px rgba(50, 50, 93, 0.25), 0 18px 36px -18px rgba(0, 0, 0, 0.3), 0 -12px 36px -8px rgba(0, 0, 0, 0.025);
      padding: 40px;
      height: 40px;
      position: relative; }
      .timeline__event__icon i {
        font-size: 32px; }
      .timeline__event__icon:before {
        content: "";
        width: 2px;
        height: 100%;
        background: #49344d;
        position: absolute;
        top: 0%;
        z-index: -1;
        left: 50%;
        transform: translateX(-50%);
        animation: fillTop 2s forwards 1s ease-in-out; }
      .timeline__event__icon:after {
        content: "";
        width: 100%;
        height: 2px;
        background: #49344d;
        position: absolute;
        left: 0%;
        z-index: -1;
        top: 50%;
        transform: translateY(-50%);
        animation: fillLeftOdd 2s forwards 1s ease-in-out; }
    .timeline__event__icon__noanimation {
      display: flex;
      align-items: center;
      justify-content: center;
      color: #f6f9fc;
      padding: 20px;
      align-self: center;
      margin: 0 20px;
      background: #49344d;
      border-radius: 100%;
      width: 40px;
      box-shadow: 0 30px 60px -12px rgba(50, 50, 93, 0.25), 0 18px 36px -18px rgba(0, 0, 0, 0.3), 0 -12px 36px -8px rgba(0, 0, 0, 0.025);
      padding: 40px;
      height: 40px;
      position: relative; }
      .timeline__event__icon__noanimation i {
        font-size: 32px; }
    .timeline__event__description {
      flex-basis: 60%; }
    .timeline__event__description_nomobile {
      flex-basis: 60%; }
    .timeline__event--type2:after {
      background: #93689a; }
    .timeline__event--type2 .timeline__event__date {
      color: #f6f9fc;
      background: #93689a; }
    .timeline__event--type2:nth-child(2n + 1) .timeline__event__icon__noanimation:before, .timeline__event--type2:nth-child(2n + 1) .timeline__event__icon__noanimation:after,
    .timeline__event--type2:nth-child(2n + 1) .timeline__event__icon:before,
    .timeline__event--type2:nth-child(2n + 1) .timeline__event__icon:after {
      background: #49344d; }
    .timeline__event--type2 .timeline__event__icon__noanimation,
    .timeline__event--type2 .timeline__event__icon {
      background: #49344d;
      color: #f6f9fc; }
      .timeline__event--type2 .timeline__event__icon__noanimation:before, .timeline__event--type2 .timeline__event__icon__noanimation:after,
      .timeline__event--type2 .timeline__event__icon:before,
      .timeline__event--type2 .timeline__event__icon:after {
        background: #49344d; }
    .timeline__event--type2 .timeline__event__title {
      color: #f6f9fc; }
    .timeline__event--type3:after {
      background: #93689a; }
    .timeline__event--type3 .timeline__event__date {
      color: #93689a;
      background-color: #93689a; }
    .timeline__event--type3:nth-child(2n + 1) .timeline__event__icon__noanimation:before, .timeline__event--type3:nth-child(2n + 1) .timeline__event__icon__noanimation:after,
    .timeline__event--type3:nth-child(2n + 1) .timeline__event__icon:before,
    .timeline__event--type3:nth-child(2n + 1) .timeline__event__icon:after {
      background: #93689a; }
    .timeline__event--type3 .timeline__event__icon__noanimation,
    .timeline__event--type3 .timeline__event__icon {
      background: #93689a;
      color: #93689a; }
      .timeline__event--type3 .timeline__event__icon__noanimation:before, .timeline__event--type3 .timeline__event__icon__noanimation:after,
      .timeline__event--type3 .timeline__event__icon:before,
      .timeline__event--type3 .timeline__event__icon:after {
        background: #93689a; }
    .timeline__event--type3 .timeline__event__title {
      color: #93689a; }
    .timeline__event:last-child .timeline__event__icon__noanimation:before,
    .timeline__event:last-child .timeline__event__icon:before {
      content: none; }

@media (max-width: 786px) {
  .timeline__event {
    flex-direction: column;
    align-self: center;
    width: 80%; }
    .timeline__event__content {
      width: 100%; }
    .timeline__event__icon__noanimation, .timeline__event__icon {
      border-radius: 6px 6px 0 0;
      width: 100%;
      margin: 0;
      box-shadow: none; }
      .timeline__event__icon__noanimation:before, .timeline__event__icon__noanimation:after, .timeline__event__icon:before, .timeline__event__icon:after {
        display: none; }
    .timeline__event__date {
      border-radius: 0;
      padding: 20px; }
    .timeline__event:nth-child(2n + 1) {
      flex-direction: column;
      align-self: center; }
      .timeline__event:nth-child(2n + 1) .timeline__event__date {
        border-radius: 0;
        padding: 20px; }
      .timeline__event:nth-child(2n + 1) .timeline__event__icon__noanimation,
      .timeline__event:nth-child(2n + 1) .timeline__event__icon {
        border-radius: 6px 6px 0 0;
        margin: 0; } }

@keyframes fillLeft {
  100% {
    right: 100%; } }

@keyframes fillTop {
  100% {
    top: 100%; } }

@keyframes fillLeftOdd {
  100% {
    left: 100%; } }
